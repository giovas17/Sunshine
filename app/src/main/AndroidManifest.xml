<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="softwaremobility.darkgeat.sunshine" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:theme="@style/ForecastTheme"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DetailActivity"
            android:parentActivityName=".MainActivity"
            android:label="Detail Activity" >
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/SettingsTheme"
            android:label="@string/title_activity_settings" >
        </activity>
        <provider
            android:authorities="softwaremobility.darkgeat.sunshine.app"
            android:name=".data.WeatherProvider"
            android:exported="true"
            android:permission="softwaremobility.darkgeat.LICENCE_TO_KILL"/>
        <service android:name=".services.SunshineService"/>
        <receiver android:name=".services.SunshineService$AlarmReceiver"/>
    </application>

    <permission android:name="softwaremobility.darkgeat.LICENCE_TO_KILL"
        android:protectionLevel="dangerous"
        android:label="Licenced to Kill">
    </permission>

</manifest>
