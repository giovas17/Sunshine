<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    app:columnCount="2">

    <android.support.v4.widget.Space
        app:layout_columnSpan="2"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_columnSpan="2"
        app:layout_columnWeight="1"
        app:layout_gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="24sp"
        android:text="Today"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:id="@+id/detail_day_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/detail_month_text"
        app:layout_gravity="center"
        app:layout_columnSpan="2"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:text="April 03"
        app:layout_columnWeight="1"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="96sp"
        app:layout_columnWeight="1"
        android:gravity="center"
        app:layout_gravity="center_vertical"
        android:text="19ยบ"
        android:id="@+id/detail_max_temp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_columnWeight="1"
        app:layout_gravity="center_vertical"
        android:maxWidth="140dp"
        android:maxHeight="140dp"
        android:src="@drawable/art_clear"
        android:id="@+id/detail_icon_weather" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="48sp"
        android:text="13ยบ"
        app:layout_columnWeight="1"
        app:layout_gravity="center"
        android:id="@+id/detail_min_temp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/detail_desc_text"
        app:layout_columnWeight="1"
        app:layout_gravity="center"
        android:text="Clear"
        android:textSize="22sp" />

    <android.support.v4.widget.Space
        app:layout_columnSpan="2"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"/>

</android.support.v7.widget.GridLayout>