<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/sunshine_blue</item>
        <item name="colorPrimaryDark">@color/sunshine_dark_blue</item>
        <item name="colorAccent">@color/sunshine_accent</item>
        <item name="android:windowBackground">@color/background_default</item>
        <item name="android:navigationBarColor">@color/sunshine_blue</item>
        <item name="toolbarStyle">@style/Toolbar</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="ForecastListStyle">

    </style>

    <!-- Settings activity theme. -->
    <style name="SettingsTheme" parent="@android:style/Theme.Material.Light.DarkActionBar">
        <item name="android:colorPrimary">@color/sunshine_blue</item>
        <item name="android:colorPrimaryDark">@color/sunshine_dark_blue</item>
        <item name="android:navigationBarColor">@color/sunshine_blue</item>
    </style>

    <!-- Main activity theme. -->
    <style name="ForecastTheme" parent="AppTheme">
    </style>

    <style name="AppTheme.Details" parent="@style/AppTheme">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowEnterTransition">@transition/details_window_enter_transition</item>
        <item name="android:windowReturnTransition">@transition/details_window_return_transition</item>
    </style>


    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="elevation">@dimen/appbar_elevation</item>
        <item name="popupTheme">@style/Theme.AppCompat.Light</item>
    </style>

</resources>