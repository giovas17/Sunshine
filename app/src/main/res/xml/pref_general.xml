<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/softwaremobility.darkgeat.sunshine">


    <softwaremobility.darkgeat.objects.LocationEditTextPreference
        android:key="@string/pref_location_key"
        android:title="@string/pref_location"
        android:defaultValue="@string/default_id_location"
        android:contentDescription="Zip Code"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1"
        custom:min_length="5"/>

    <ListPreference
        android:key="@string/pref_units_key"
        android:title="@string/pref_units_label"
        android:defaultValue="@string/pref_units_metric"
        android:entries="@array/pref_units_options"
        android:entryValues="@array/pref_units_values"/>

    <CheckBoxPreference
        android:key="@string/pref_notification_key"
        android:title="@string/pref_notification"
        android:summaryOn="@string/pref_notification_true"
        android:summaryOff="@string/pref_notification_false"
        android:defaultValue="@string/pref_notification_default"/>

    <ListPreference
        android:key="@string/pref_icon_pack_key"
        android:title="@string/pref_icon_pack"
        android:defaultValue="@string/pref_icon_pack_default_value"
        android:entries="@array/pref_icon_options"
        android:entryValues="@array/pref_icon_values"/>

</PreferenceScreen>
