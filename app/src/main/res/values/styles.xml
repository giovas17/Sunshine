<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/sunshine_blue</item>
        <item name="colorPrimaryDark">@color/sunshine_dark_blue</item>
        <item name="colorAccent">@color/sunshine_accent</item>
        <item name="android:windowBackground">@color/background_default</item>
        <item name="toolbarStyle">@style/Toolbar</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="ForecastListStyle">
    </style>

    <!-- Settings activity theme. -->
    <style name="SettingsTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>

    <!-- Main activity theme. -->
    <style name="ForecastTheme" parent="AppTheme">
    </style>

    <style name="AppTheme.Details" parent="@style/AppTheme"/>

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="elevation">@dimen/appbar_elevation</item>
        <item name="popupTheme">@style/Theme.AppCompat.Light</item>
    </style>
</resources>
